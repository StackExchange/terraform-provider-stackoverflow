# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Go
# https://golang.org/cmd/gofmt/
[{go.mod,*.go}]
indent_style = tab
